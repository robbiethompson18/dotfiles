{
  "permissions": {
    "allow": [
      "Bash(:*::*)",
      "Read(**)",
      "Task(*)",
      "WebSearch",
      "WebFetch(domain:*)",
      "Grep(*)",
      "Glob(**)",
      "LS(*)",
      "MultiEdit(**)",
      "NotebookEdit(**)",
      "NotebookRead(**)",
      "TodoWrite(*)",
      "ExitPlanMode(*)"
    ],
    "deny": [],
    "defaultMode": "bypassPermissions"
  },
  "enabledPlugins": {
    "github@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "allow": [
    "*"
  ],
  "autoUpdates": true
}
